@{
    ViewData["Title"] = "Analytics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Analytics Dashboard</h1>
            <p class="page-subtitle">Comprehensive insights into system usage and performance</p>
        </div>
        <div class="page-actions">
            <div class="btn-group">
                <button class="btn btn-modern btn-outline-secondary" onclick="exportAnalytics()">
                    <i class="fas fa-download"></i>
                    Export Data
                </button>
                <button class="btn btn-modern btn-primary-modern" onclick="refreshAnalytics()">
                    <i class="fas fa-sync-alt"></i>
                    Refresh
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Time Period Selector -->
<div class="modern-card mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h6 class="mb-0">Analytics Period</h6>
            <small class="text-muted">Select the time period for analysis</small>
        </div>
        <div class="btn-group" role="group">
            <input type="radio" class="btn-check" name="timePeriod" id="period7d" autocomplete="off">
            <label class="btn btn-outline-primary" for="period7d">7 Days</label>
            
            <input type="radio" class="btn-check" name="timePeriod" id="period30d" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="period30d">30 Days</label>
            
            <input type="radio" class="btn-check" name="timePeriod" id="period90d" autocomplete="off">
            <label class="btn btn-outline-primary" for="period90d">90 Days</label>
            
            <input type="radio" class="btn-check" name="timePeriod" id="period1y" autocomplete="off">
            <label class="btn btn-outline-primary" for="period1y">1 Year</label>
        </div>
    </div>
</div>

<!-- Key Metrics -->

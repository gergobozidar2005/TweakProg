@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshStats()">
            <i class="fas fa-sync-alt"></i> Refresh
        </button>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Users</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalUsers">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Licenses</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalLicenses">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-key fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Active Licenses</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeLicenses">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Used Licenses</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="usedLicenses">-</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">License Management</h6>
            </div>
            <div class="card-body">
                <p class="mb-3">Generate new license keys, view existing keys, and manage their status.</p>
                <div class="d-grid gap-2">
                    <a asp-action="Keys" class="btn btn-primary">
                        <i class="fas fa-key"></i> Manage Keys
                    </a>
                    <a asp-action="GenerateKey" class="btn btn-outline-primary">
                        <i class="fas fa-plus"></i> Generate New Key
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-success">User Management</h6>
            </div>
            <div class="card-body">
                <p class="mb-3">View registered users, manage their accounts, and grant admin privileges.</p>
                <div class="d-grid gap-2">
                    <a asp-action="UserManagement" class="btn btn-success">
                        <i class="fas fa-users"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4 mb-4">
        <div class="card shadow">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-info">System Logs</h6>
            </div>
            <div class="card-body">
                <p class="mb-3">Monitor application activity and user actions through detailed logs.</p>
                <div class="d-grid gap-2">
                    <a asp-action="Logs" class="btn btn-info">
                        <i class="fas fa-list-alt"></i> View Logs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="recentActivityTable">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>User</th>
                                <th>Action</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody id="recentActivityBody">
                            <tr>
                                <td colspan="4" class="text-center">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadStats();
            loadRecentActivity();
            
            // Auto-refresh every 30 seconds
            setInterval(function() {
                loadStats();
                loadRecentActivity();
            }, 30000);
        });

        function refreshStats() {
            loadStats();
            loadRecentActivity();
        }

        function loadStats() {
            $.get('/api/adminapi/stats', function(data) {
                $('#totalUsers').text(data.totalUsers);
                $('#totalLicenses').text(data.totalLicenses);
                $('#activeLicenses').text(data.activeLicenses);
                $('#usedLicenses').text(data.usedLicenses);
            }).fail(function() {
                console.error('Failed to load statistics');
            });
        }

        function loadRecentActivity() {
            $.get('/api/logging/recent', function(data) {
                var tbody = $('#recentActivityBody');
                tbody.empty();
                
                if (data && data.length > 0) {
                    data.forEach(function(log) {
                        var row = '<tr>' +
                            '<td>' + new Date(log.timestamp).toLocaleString() + '</td>' +
                            '<td>' + (log.username || 'System') + '</td>' +
                            '<td>' + (log.action || 'Activity') + '</td>' +
                            '<td>' + (log.message || '') + '</td>' +
                            '</tr>';
                        tbody.append(row);
                    });
                } else {
                    tbody.append('<tr><td colspan="4" class="text-center">No recent activity</td></tr>');
                }
            }).fail(function() {
                $('#recentActivityBody').html('<tr><td colspan="4" class="text-center text-danger">Failed to load activity</td></tr>');
            });
        }
    </script>
}
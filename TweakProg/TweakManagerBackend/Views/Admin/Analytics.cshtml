@section Scripts {
    <script>
        let trendsChart, statusChart, geoChart;
        
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
            setupEventListeners();
        });
        
        function setupEventListeners() {
            // Time period change
            document.querySelectorAll('input[name="timePeriod"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.checked) {
                        updateAnalytics(this.id);
                    }
                });
            });
            
            // Chart type change
            document.querySelectorAll('input[name="chartType"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.checked) {
                        updateTrendsChart(this.id);
                    }
                });
            });
        }
        
        function initializeCharts() {
            // Trends Chart
            const trendsCtx = document.getElementById('trendsChart').getContext('2d');
            trendsChart = new Chart(trendsCtx, {
                type: 'line',
                data: {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'Keys Generated',
                        data: [45, 52, 38, 67],
                        borderColor: '#6366f1',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Keys Activated',
                        data: [38, 45, 32, 58],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Status Chart
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Active', 'Inactive', 'Expired'],
                    datasets: [{
                        data: [180, 45, 22],
                        backgroundColor: [
                            '#10b981',
                            '#f59e0b',
                            '#ef4444'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Geographic Chart
            const geoCtx = document.getElementById('geoChart').getContext('2d');
            geoChart = new Chart(geoCtx, {
                type: 'bar',
                data: {
                    labels: ['US', 'UK', 'DE', 'FR', 'Others'],
                    datasets: [{
                        data: [45, 23, 15, 12, 5],
                        backgroundColor: [
                            '#6366f1',
                            '#10b981',
                            '#f59e0b',
                            '#ef4444',
                            '#64748b'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 50
                        }
                    }
                }
            });
        }
        
        function updateAnalytics(period) {
            showNotification(`Loading analytics for ${period}...`, 'info');
            
            // Simulate data loading
            setTimeout(() => {
                // Update metrics based on period
                const metrics = {
                    'period7d': { keys: 89, users: 156, usage: 91.2, session: '18m' },
                    'period30d': { keys: 1247, users: 892, usage: 94.2, session: '24m' },
                    'period90d': { keys: 3456, users: 2134, usage: 96.8, session: '28m' },
                    'period1y': { keys: 12456, users: 7890, usage: 98.1, session: '32m' }
                };
                
                const data = metrics[period];
                if (data) {
                    // Update metric cards
                    document.querySelector('.h4').textContent = data.keys.toLocaleString();
                    // Update other metrics...
                }
                
                showNotification('Analytics updated successfully', 'success');
            }, 1000);
        }
        
        function updateTrendsChart(chartType) {
            const newData = {
                'chartKeys': {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'Keys Generated',
                        data: [45, 52, 38, 67],
                        borderColor: '#6366f1',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)'
                    }]
                },
                'chartUsers': {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'New Users',
                        data: [23, 31, 28, 45],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)'
                    }]
                },
                'chartActivity': {
                    labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                    datasets: [{
                        label: 'API Calls',
                        data: [1234, 1456, 1123, 1678],
                        borderColor: '#f59e0b',
                        backgroundColor: 'rgba(245, 158, 11, 0.1)'
                    }]
                }
            };
            
            trendsChart.data = newData[chartType];
            trendsChart.update();
        }
        
        function refreshAnalytics() {
            showNotification('Refreshing analytics data...', 'info');
            
            // Simulate refresh
            setTimeout(() => {
                // Update all charts and metrics
                trendsChart.update();
                statusChart.update();
                geoChart.update();
                
                showNotification('Analytics refreshed successfully', 'success');
            }, 2000);
        }
        
        function exportAnalytics() {
            showNotification('Exporting analytics data...', 'info');
            
            // Simulate export
            setTimeout(() => {
                showNotification('Analytics data exported successfully', 'success');
            }, 3000);
        }
    </script>
}
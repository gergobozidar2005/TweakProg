<Window x:Class="TweakAppClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tweak App - Regisztráció" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Felhasználónév:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
            <Label Content="Licenckulcs:"/>
            <TextBox x:Name="LicenseKeyTextBox" Margin="0,0,0,20"/>
            <Button x:Name="RegisterButton" Content="Regisztráció" Padding="10,5" Click="RegisterButton_Click"/>
            <TextBlock x:Name="StatusTextBlock" Margin="0,15,0,0" Foreground="Red" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
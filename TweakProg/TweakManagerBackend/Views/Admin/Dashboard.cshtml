@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Dashboard</h1>
            <p class="page-subtitle">Welcome back! Here's what's happening with your system.</p>
        </div>
        <div class="page-actions">
            <button class="btn btn-modern btn-primary-modern" onclick="refreshDashboard()">
                <i class="fas fa-sync-alt"></i>
                Refresh
            </button>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="modern-card">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="bg-primary bg-gradient rounded-circle p-3">
                        <i class="fas fa-key text-white"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">Total License Keys</div>
                    <div class="h4 mb-0" id="totalKeys">-</div>
                </div>
            </div>
            <div class="mt-3">
                <span class="text-success small">
                    <i class="fas fa-arrow-up"></i> 12%
                </span>
                <span class="text-muted small ms-2">from last month</span>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="modern-card">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="bg-success bg-gradient rounded-circle p-3">
                        <i class="fas fa-users text-white"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">Active Users</div>
                    <div class="h4 mb-0" id="activeUsers">-</div>
                </div>
            </div>
            <div class="mt-3">
                <span class="text-success small">
                    <i class="fas fa-arrow-up"></i> 8%
                </span>
                <span class="text-muted small ms-2">from last month</span>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="modern-card">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="bg-warning bg-gradient rounded-circle p-3">
                        <i class="fas fa-exclamation-triangle text-white"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">System Warnings</div>
                    <div class="h4 mb-0" id="systemWarnings">-</div>
                </div>
            </div>
            <div class="mt-3">
                <span class="text-danger small">
                    <i class="fas fa-arrow-up"></i> 3
                </span>
                <span class="text-muted small ms-2">new this week</span>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="modern-card">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="bg-info bg-gradient rounded-circle p-3">
                        <i class="fas fa-chart-line text-white"></i>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">System Health</div>
                    <div class="h4 mb-0" id="systemHealth">-</div>
                </div>
            </div>
            <div class="mt-3">
                <span class="text-success small">
                    <i class="fas fa-check-circle"></i> Excellent
                </span>
                <span class="text-muted small ms-2">all systems operational</span>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-xl-8 mb-4">
        <div class="modern-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">License Key Usage Trends</h5>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="chartPeriod" id="chart7d" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="chart7d">7 Days</label>
                    
                    <input type="radio" class="btn-check" name="chartPeriod" id="chart30d" autocomplete="off">
                    <label class="btn btn-outline-primary" for="chart30d">30 Days</label>
                    
                    <input type="radio" class="btn-check" name="chartPeriod" id="chart90d" autocomplete="off">
                    <label class="btn btn-outline-primary" for="chart90d">90 Days</label>
                </div>
            </div>
            <canvas id="usageChart" height="100"></canvas>
        </div>
    </div>
    
    <div class="col-xl-4 mb-4">
        <div class="modern-card">
            <h5 class="mb-3">Key Status Distribution</h5>
            <canvas id="statusChart" height="200"></canvas>
        </div>
    </div>
</div>

<!-- Recent Activity and Quick Actions -->
<div class="row">
    <div class="col-xl-8 mb-4">
        <div class="modern-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Recent Activity</h5>
                <a href="@Url.Action("Logs")" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="activity-feed" id="recentActivity">
                <!-- Activity items will be loaded here -->
            </div>
        </div>
    </div>
    
    <div class="col-xl-4 mb-4">
        <div class="modern-card">
            <h5 class="mb-3">Quick Actions</h5>
            <div class="d-grid gap-2">
                <a href="@Url.Action("GenerateKey")" class="btn btn-modern btn-primary-modern">
                    <i class="fas fa-plus"></i>
                    Generate New Key
                </a>
                <a href="@Url.Action("UserManagement")" class="btn btn-modern btn-success-modern">
                    <i class="fas fa-user-plus"></i>
                    Manage Users
                </a>
                <a href="@Url.Action("Logs")" class="btn btn-modern btn-info-modern">
                    <i class="fas fa-file-alt"></i>
                    View Logs
                </a>
                <button class="btn btn-modern btn-warning-modern" onclick="exportData()">
                    <i class="fas fa-download"></i>
                    Export Data
                </button>
            </div>
        </div>
        
        <div class="modern-card mt-3">
            <h5 class="mb-3">System Status</h5>
            <div class="system-status">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Database</span>
                    <span class="badge bg-success">Online</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Email Service</span>
                    <span class="badge bg-success">Online</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>API Endpoints</span>
                    <span class="badge bg-success">Online</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Storage</span>
                    <span class="badge bg-warning">75% Used</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let usageChart, statusChart;
        
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
            initializeCharts();
            loadRecentActivity();
            
            // Refresh dashboard every 30 seconds
            setInterval(loadDashboardData, 30000);
        });
        
        function loadDashboardData() {
            // Simulate API calls - replace with actual API endpoints
            setTimeout(() => {
                document.getElementById('totalKeys').textContent = '247';
                document.getElementById('activeUsers').textContent = '1,234';
                document.getElementById('systemWarnings').textContent = '3';
                document.getElementById('systemHealth').textContent = '98%';
            }, 500);
        }
        
        function initializeCharts() {
            // Usage Chart
            const usageCtx = document.getElementById('usageChart').getContext('2d');
            usageChart = new Chart(usageCtx, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Keys Generated',
                        data: [12, 19, 8, 15, 22, 18, 25],
                        borderColor: '#6366f1',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'Keys Activated',
                        data: [8, 15, 12, 18, 20, 16, 22],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
            
            // Status Chart
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Active', 'Inactive', 'Expired'],
                    datasets: [{
                        data: [180, 45, 22],
                        backgroundColor: [
                            '#10b981',
                            '#f59e0b',
                            '#ef4444'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
        
        function loadRecentActivity() {
            const activities = [
                {
                    icon: 'fas fa-key',
                    iconColor: 'text-primary',
                    title: 'New license key generated',
                    description: 'Key assigned to user john.doe@example.com',
                    time: '2 minutes ago'
                },
                {
                    icon: 'fas fa-user',
                    iconColor: 'text-success',
                    title: 'New user registered',
                    description: 'jane.smith@example.com joined the platform',
                    time: '15 minutes ago'
                },
                {
                    icon: 'fas fa-exclamation-triangle',
                    iconColor: 'text-warning',
                    title: 'System warning',
                    description: 'High memory usage detected on server',
                    time: '1 hour ago'
                },
                {
                    icon: 'fas fa-check-circle',
                    iconColor: 'text-success',
                    title: 'Backup completed',
                    description: 'Daily backup completed successfully',
                    time: '2 hours ago'
                }
            ];
            
            const activityContainer = document.getElementById('recentActivity');
            activityContainer.innerHTML = activities.map(activity => `
                <div class="d-flex align-items-start mb-3">
                    <div class="flex-shrink-0">
                        <i class="${activity.icon} ${activity.iconColor}"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="fw-bold">${activity.title}</div>
                        <div class="text-muted small">${activity.description}</div>
                        <div class="text-muted small">${activity.time}</div>
                    </div>
                </div>
            `).join('');
        }
        
        function refreshDashboard() {
            showNotification('Dashboard refreshed successfully', 'success');
            loadDashboardData();
            loadRecentActivity();
        }
        
        function exportData() {
            showNotification('Export started. You will receive an email when ready.', 'info');
        }
    </script>
}
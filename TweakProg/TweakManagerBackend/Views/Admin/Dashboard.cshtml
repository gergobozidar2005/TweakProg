@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Manage License Keys</div>
            <div class="card-body">
                <h5 class="card-title">Key Management</h5>
                <p class="card-text">Generate new keys, view, activate or deactivate existing license keys.</p>
                <a asp-action="Keys" class="btn btn-light">Go to Keys</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Manage Users</div>
            <div class="card-body">
                <h5 class="card-title">User Administration</h5>
                <p class="card-text">View all registered users and grant or revoke admin privileges.</p>
                <a asp-action="UserManagement" class="btn btn-light">Go to Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">View Logs</div>
            <div class="card-body">
                <h5 class="card-title">Application Logs</h5>
                <p class="card-text">Check the application activity logs sent from the client application.</p>
                <a asp-action="Logs" class="btn btn-light">Go to Logs</a>
            </div>
        </div>
    </div>
</div>
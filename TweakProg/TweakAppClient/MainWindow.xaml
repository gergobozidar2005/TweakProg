<Window x:Class="TweakAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tweak App - Control Panel" Height="500" Width="700" MinHeight="400" MinWidth="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Information Panel -->
        <GroupBox Grid.Row="0" Header="System Information" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <TextBlock x:Name="SystemInfoTextBlock" TextWrapping="Wrap" FontSize="12"/>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <GroupBox Grid.Row="1" Header="System Optimization Tools" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="ClearTempButton" Content="Clean Temp Folders" Padding="15,8" Margin="0,0,10,0" 
                            Click="ClearTempButton_Click" ToolTip="Cleans temporary files and folders"/>
                    <Button x:Name="EmptyRecycleBinButton" Content="Empty Recycle Bin" Padding="15,8" Margin="0,0,10,0"
                            Click="EmptyRecycleBinButton_Click" ToolTip="Permanently deletes all files in the Recycle Bin"/>
                    <Button x:Name="CleanupDiskButton" Content="Disk Cleanup" Padding="15,8" 
                            Click="CleanupDiskButton_Click" ToolTip="Performs comprehensive disk cleanup"/>
                </StackPanel>
                
                <!-- Progress Bar -->
                <ProgressBar x:Name="ProgressBar" Height="6" Margin="0,5,0,0" Visibility="Collapsed"/>
                <TextBlock x:Name="ProgressTextBlock" FontSize="11" Foreground="Gray" Margin="0,2,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </GroupBox>

        <!-- Feedback Area -->
        <GroupBox Grid.Row="2" Header="Operation Log" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#f8f8f8">
                <TextBlock x:Name="FeedbackTextBlock" Margin="5" TextWrapping="Wrap" 
                           Text="Welcome to Tweak App! Select an optimization tool to get started."/>
            </ScrollViewer>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="UserInfoTextBlock" Text="Not logged in"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
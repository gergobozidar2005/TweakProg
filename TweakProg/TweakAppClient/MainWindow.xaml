<Window x:Class="TweakAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tweak App - Control Panel" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="ClearTempButton" Content="Temp Folder Cleanup" Padding="10,5" Margin="0,0,5,0" Click="ClearTempButton_Click"/>
            <Button x:Name="EmptyRecycleBinButton" Content="Empty Recycle Bin" Padding="10,5" Click="EmptyRecycleBinButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#f0f0f0">
            <TextBlock x:Name="FeedbackTextBlock" Margin="5" TextWrapping="Wrap" Text="Welcome to Tweak App! Ready for optimization."/>
        </ScrollViewer>
    </Grid>
</Window>
<Window x:Class="TweakAppClient.AccountRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Registration" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <Label Content="Confirm Password:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20"/>

            <Button x:Name="RegisterButton" Content="Register" Padding="10,5" Click="RegisterButton_Click"/>

            <TextBlock x:Name="StatusTextBlock" Margin="0,15,0,0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="TweakAppClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Tweak App" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            <Button x:Name="LoginButton" Content="Login" IsDefault="True" Padding="10,5" Click="LoginButton_Click"/>

            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">
                <Hyperlink Click="RegisterHyperlink_Click">
                    Register here.
                </Hyperlink>
            </TextBlock>

            <TextBlock x:Name="StatusTextBlock" Margin="0,10,0,0" Foreground="Red" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>